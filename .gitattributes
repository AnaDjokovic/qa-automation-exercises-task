# Auto-detect text files and normalize line endings
* text=auto

# Force JavaScript, TypeScript, JSON, HTML, CSS, YAML, MD to LF
*.js     text eol=lf
*.mjs    text eol=lf
*.cjs    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.json   text eol=lf
*.html   text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.md     text eol=lf

# Ignore binary files for line ending normalization
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.zip    binary
*.gz     binary

# Optional: lock files
package-lock.json text eol=lf
yarn.lock        text eol=lf
pnpm-lock.yaml   text eol=lf

# GitHub workflows
.github/**/*.yml text eol=lf

# VSCode settings
.vscode/* text eol=lf
